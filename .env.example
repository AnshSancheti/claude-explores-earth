# Required API keys
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
OPENAI_API_KEY=your_openai_api_key

# Admin / security (recommended)
# Used for starting/stopping runs via the UI
CONTROL_PASSWORD=change-me

# Server
PORT=3000
NODE_ENV=development

# Exploration timing
# Time between autonomous steps (ms)
STEP_INTERVAL_MS=500
# Save state every N steps
SAVE_INTERVAL=500
# Limit decision log entries kept in memory
DECISION_HISTORY_LIMIT=20

# Start position
START_LAT=40.748817
START_LNG=-73.985428
# Optional: override start position with a specific Street View panoId
START_PANO_ID=

# Dead-end recovery
# Max distance (meters) to probe forward when a dead-end pano is encountered
MAX_DEAD_END_DISTANCE=200

# Clustered pathfinding
# Distance (meters) to cluster nearby panoIds (mitigate A/A' splits)
CLUSTER_DISTANCE_M=2.0

# Minimap path simplification (tiered Douglas–Peucker)
# Set to 'true' to disable simplification entirely
DISABLE_PATH_SIMPLIFICATION=false
# Epsilon values (degrees). Roughly: 0.00001 ≈ 1.1m latitude
PATH_EPSILON_RECENT=0.000005
PATH_EPSILON_MEDIUM=0.00002
PATH_EPSILON_OLD=0.00005

