{
  "name": "ai-explores-nyc",
  "version": "1.0.0",
  "description": "An autonomous AI agent that explores Manhattan using Google Street View",
  "main": "server/index.js",
  "type": "module",
  "scripts": {
    "start": "node server/index.js",
    "dev": "nodemon server/index.js",
    "test": "node --test"
  },
  "dependencies": {
    "canvas": "^2.11.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "openai": "^4.28.0",
    "puppeteer": "^22.0.0",
    "sharp": "^0.34.3",
    "socket.io": "^4.6.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "nodemon": "^3.0.3"
  },
  "nodemonConfig": {
    "ignore": [
      "runs/*",
      "*.log",
      "current-run*.json",
      "runs/shots/*",
      "runs/saves/*",
      "runs/exploration-*.log",
      "runs/persistent_logs/*",
      "*.jpg",
      "*.png"
    ],
    "watch": [
      "server/**/*",
      "public/**/*"
    ],
    "ext": "js,json,html,css",
    "delay": "1000"
  }
}
